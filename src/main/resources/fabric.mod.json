    "authors": [
        "Team Abode"
    ],
    "contact": {
        "homepage": "https://twitter.com/TeamAbodeMC",
        "sources": "https://github.com/Team-Abode/sketch"
    },
    "license": "All Rights Reserved",
    "icon": "assets/sketch/icon.png",
    "environment": "*",
    "entrypoints": {
